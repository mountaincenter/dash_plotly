# AWS Cognito Configuration Template
# Copy this file to .env.cognito and fill in the values

# User Pool
COGNITO_USER_POOL_ID=
COGNITO_REGION=ap-northeast-1

# Client IDs
COGNITO_CLIENT_ID_NEXTJS=
COGNITO_CLIENT_ID_API=

# Hosted UI
COGNITO_DOMAIN=
COGNITO_HOSTED_UI_URL=

# User Credentials (Admin)
COGNITO_ADMIN_EMAIL=
COGNITO_ADMIN_PASSWORD=

# Callback URLs
COGNITO_CALLBACK_URL_LOCAL=http://localhost:3000/api/auth/callback/cognito
COGNITO_CALLBACK_URL_PROD=https://stock.porque-and-because.work/api/auth/callback/cognito
